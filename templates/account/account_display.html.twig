{% extends 'base.html.twig' %}

{% block title %}Your account!
{% endblock %}

{% block body %}
	<h1 class="w-100 text-center">CCP :
		{{ account.number }}</h1>
	<div class="w-75 mx-auto p-3 ">
		<div class="border">
			{% if account.money < 0 %}
				<div class="text-danger h2">{{account.money}} €</div>
			{% else %}
				<div class="text-success h2">{{account.money}} €</div>
			{% endif %}
		</div>
        <div class="border-right border-left border-bottom overflow-auto">
		{% for transaction in transactions %}
			<div class="p-3 d-flex justify-content-between">
				{% if transaction.status == 0 %}
					<div class="m-3">{{transaction.name}}</div>
					<div class="text-success m-3">+{{transaction.price}} €</div>
				{% else %}
					<div class="m-3">{{transaction.name}}</div>
					<div class="text-danger m-3">-{{transaction.price}} €</div>
				{% endif %}
			</div>
		{% endfor %}
        </div>
	</div>
{% endblock %}
